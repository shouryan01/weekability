{
	"$schema": "https://schema.tauri.app/config/2.0.0",
	"productName": "weekability",
	"version": "0.1.0",
	"identifier": "com.weekability.app",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "weekability",
				"width": 1250,
				"height": 850,
				"center": true,
				"hiddenTitle": true,
				"titleBarStyle": "Overlay"
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
